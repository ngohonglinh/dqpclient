<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_trai"
        android:src="@drawable/ticket"
        android:backgroundTint="@color/colorPurple"
        android:layout_gravity="bottom|end"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_phai"
        android:src="@drawable/ic_menu_camera"
        android:backgroundTint="@color/colorPrimary"
        android:layout_gravity="center"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_tren"
        android:src="@drawable/chi"
        android:backgroundTint="#c2185b"
        android:layout_gravity="bottom|end"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_duoi"
        android:src="@drawable/ic_menu_camera"
        android:backgroundTint="@color/colorAccent"
        android:layout_gravity="center"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_45Degrees"
        android:src="@drawable/ic_menu_camera"
        android:backgroundTint="@color/colorAccent"
        android:layout_gravity="center"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_135Degrees"
        android:src="@drawable/ic_menu_camera"
        android:backgroundTint="@color/colorAccent"
        android:layout_gravity="center"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_225Degrees"
        android:src="@drawable/ic_menu_camera"
        android:backgroundTint="@color/colorAccent"
        android:layout_gravity="center"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_315Degrees"
        android:visibility="invisible"
        android:src="@drawable/ticket2"
        android:backgroundTint="@color/colorDeepPurple"
        android:layout_gravity="bottom|end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</FrameLayout>