<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="@color/colorWindowBackground"
    android:layout_height="60dp"
    android:id="@+id/customlist_debtbook_ly">

    <TextView
        android:id="@+id/customlist_debtbook_tv1"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="1"
        android:textColor="#fff"
        android:textSize="25sp"
        android:textStyle="bold" />
    <LinearLayout
        android:paddingLeft="8dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="10">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:weightSum="10">

            <TextView
                android:id="@+id/customlist_debtbook_tv2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:text="Truong Dinh Chien"
                android:gravity="center_vertical"
                android:textColor="@color/colorWhite"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/customlist_debtbook_tv3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:text="28/12/2018 | 6,000,000"
                android:gravity="right|center_vertical"
                android:textColor="@color/colorWhite"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:weightSum="10"
            android:layout_height="0dp"
            android:layout_weight="5">
            <TextView
                android:id="@+id/customlist_debtbook_tv4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:gravity="left|center_vertical"
                android:text="22/12/2018"
                android:textColor="@color/colorWhite"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>