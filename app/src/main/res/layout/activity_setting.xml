<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="16dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="8dp"
    android:orientation="vertical"
    android:weightSum="18"
    tools:context="com.dqpvn.dqpclient.SettingActivity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">
            <TextView
                android:text="Thông tin đăng nhập"
                style="@style/myTitleTextview" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                style="@style/myRightGravityTextview"
                android:text="Server: "
                android:textAppearance="@android:style/TextAppearance.Material.Widget.TextView" />

            <EditText
                android:id="@+id/edt_SettingServerAddress"
                style="@style/myHorizontalEdtittext"
                android:hint="http://feupvp.net:3000"
                android:focusable="false"
                android:inputType="textPersonName"
                android:textAppearance="@android:style/TextAppearance.Material.Widget.EditText" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                style="@style/myRightGravityTextview"
                android:text="Login: " />
            <EditText
                android:id="@+id/edt_SettingLoginName"
                style="@style/myHorizontalEdtittext"
                android:hint="Login name"
                android:inputType="textEmailAddress" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:text="Password: "
                style="@style/myRightGravityTextview" />
            <EditText
                android:layout_weight="4"
                android:id="@+id/edt_SettingPassword"
                style="@style/myHorizontalEdtittext"
                android:hint="Password"
                android:inputType="textPassword" />
            <Button
                android:id="@+id/btn_ChangePass"
                style="@android:style/Widget.Material.Button.Colored"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="2"
                android:text="Change"
                android:textSize="12dp"
                android:textAllCaps="false" />
        </LinearLayout>


    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/tv_NewPass"
        android:text="New Password: "
        android:visibility="gone"
        style="@style/myRightGravityTextview" />
    <EditText
        android:id="@+id/edt_NewPass"
        style="@style/myHorizontalEdtittext"
        android:hint="New Password"
        android:visibility="gone"
        android:inputType="textPassword" />
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_RepeatNewPass"
            android:text="New Password: "
            android:visibility="gone"
            style="@style/myRightGravityTextview" />
        <EditText
            android:id="@+id/edt_RepeatNewPass"
            style="@style/myHorizontalEdtittext"
            android:hint="Repeat new Password"
            android:visibility="gone"
            android:inputType="textPassword" />
    </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">
            <TextView
                android:text="Lưu giữ file ảnh trong máy"
                style="@style/myTitleTextview" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:text="Từ ngày: "
                style="@style/myRightGravityTextview" />

            <EditText
                android:id="@+id/edt_SettingTuNgay"
                android:hint="Ngày bắt đầu"
                android:inputType="textPersonName"
                android:focusable="false"
                style="@style/myHorizontalEdtittext" />
        </LinearLayout>

</android.support.v7.widget.LinearLayoutCompat>
