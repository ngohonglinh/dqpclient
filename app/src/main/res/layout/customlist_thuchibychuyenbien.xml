<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="60dp"
    android:layout_width="match_parent"
    android:id="@+id/customlist_thuchibychuyenbien_ly">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:id="@+id/customlist_thuchibychuyenbien_tv1"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:text="1"
            android:textColor="#fff"
            android:textSize="25sp"
            android:textStyle="bold" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="10">

            <LinearLayout
                android:paddingLeft="8dp"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6">

                <TextView
                    android:id="@+id/customlist_thuchibychuyenbien_tv2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorDeepPurple"
                    android:text="28-98@12/12/2017"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/customlist_thuchibychuyenbien_tv3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPurple"
                    android:text="08/06/2017"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/customlist_thuchibychuyenbien_tv4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="tải cá tắc cậu"
                    android:gravity="center_vertical"
                    android:textStyle="italic|bold" />
            </LinearLayout>
            <LinearLayout
                android:paddingLeft="4dp"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:weightSum="6"
                android:layout_height="match_parent"
                android:layout_weight="4">

                <TextView
                    android:id="@+id/customlist_thuchibychuyenbien_tv5"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:gravity="right|center_vertical"
                    android:textColor="@color/colorDeepPurple"
                    android:text="160,000,000"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/customlist_thuchibychuyenbien_tv6"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:gravity="right|center_vertical"
                    android:text="85,000,000"
                    android:textColor="@color/colorPurple"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/customlist_thuchibychuyenbien_tv7"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:gravity="right|center_vertical"
                    android:text="85,000,000"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>